.home
  position relative
  &>.header
    position absolute
    top 0
    left 0
    z-index 999
  .main
    background-color #fff
    border-radius 50px
    position relative
    top -4vh
    z-index 1
    .panel
      padding 0 3vh
      font-size 30px
      .header
        display flex    
        justify-content space-between
        .name
          font-size 38px
          color red
      .body
        display flex
        justify-content space-between
        flex-wrap wrap
        .item
          width 29%
          height 28vh
          padding 1vh 0
          .movie
            position relative
            height 24vh
            .poster
              width 100%
              height 100%
            .badget
              background-color rgba(0,0,0,0.4)
              padding 0 2%
              width 96%
              position absolute
              font-size 20px
              top 20vh
              display flex
              justify-content space-between
              .name
                width 70%
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
                color white
                font-weight bold
              .score
                color gold
          .buy
            background-color red
            text-align center
            color #fff
      